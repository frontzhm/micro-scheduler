{
  "name": "micro-scheduler",
  "version": "1.0.0",
  "description": "A lightweight, high-performance microtask scheduler for managing batched task execution in both browser and Node.js environments",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "README.zh-CN.md",
    "IMPLEMENTATION.md",
    "IMPLEMENTATION.zh-CN.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm run typecheck && pnpm run test && pnpm run build",
    "prepack": "pnpm run build"
  },
  "keywords": [
    "microtask",
    "scheduler",
    "task-queue",
    "batch",
    "async",
    "queue",
    "microtask-queue",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/frontzhm/micro-scheduler.git"
  },
  "packageManager": "pnpm@10.20.0",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
